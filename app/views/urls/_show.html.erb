<div class="edit-info jumbotron">
  <h5><%= link.title %></h5>
  <p><em>Original Link: </em><%= link.target %></p>
  <p><em>Chomped Link: </em><a href="<%= root_url + link.slug %>", target="_blank"><%= root_url + link.slug %></a></p>
  <p><em>Clicks: </em><%= link.frequency %></p>
  <p><em>Status: </em><%= link.status ? "Active" : "Inactive" %></p>

  <div class="row">
    <%= link_to "Edit", edit_url_path(link), remote: true, class: "btn btn-primary"%>

    <%= link_to "Delete", url_path(link), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this URL?" }%>

    <a href="<%= root_url + link.slug %>" id= "visit-link" class="btn btn-success", target="_blank">Visit Link</a>
  </div>

<!--  -->
</div>
