<div class="container">
  <% if @my_urls.present? %>
  <div class="jumbotron">
    <div class="table-responsive links-table">
      <table class="table table-striped table-bordered responsive no-wrap">

        <thead>
          <tr>
            <th>Original Url</th>
            <th>Shortened Url</th>
            <th>Frequency</th>
            <th>Date Created</th>
            <th>Date Updated</th>
          </tr>
        </thead>

        <tbody>
          <% @my_urls.each do |url| %>
            <tr>
                <td><%= url.target %></td>
                <td><%= request.base_url + url.slug %></td>
                <td><%= url.frequency %></td>
                <td><%= url.created_at.strftime("%e %b %Y, %H:%M:%S%p") %></td>
                <td><%= url.updated_at.strftime("%e %b %Y, %H:%M:%S%p") %></td>
            </tr>
          <% end %>
        </tbody>

      </table>
    </div>
  </div>
  <% end %>
</div>