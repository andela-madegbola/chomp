<% provide(:title, "Home") %>
  <div class="center jumbotron">
    <h1>Shorten your Links</h1>
    <div row>
      <%= form_tag({controller: 'urls', action: 'new'}, method: 'post', remote: true) do %>
        <% if current_user %>
          <div class="col-sm-6">
            <input name="target" id="target" type="text" class="form-control" placeholder="Please enter the url" required>
          </div>
          <div class="col-sm-6">
            <input name="vanity" id="vanity" type="text" class="form-control" placeholder="Vanity string" >
          </div>
        <% else %>
          <div class="col-sm-12">
            <input name="target" id="target" type="text" class="form-control" placeholder="Please enter the url" required>
          </div>
        <% end %>
        <br><br><br>
        <div class="row col-sm-12 col-sm-offset-5">
          <%= submit_tag "Shot it", { class: "btn btn-primary" }%>
        </div>
      <% end %>
    </div>
    <div class="chompped_url">
      <a href="" class="extlink" target="blank"><span id="chopped"></span></a>
    </div>
</div>
