<div class="container-fluid">
  <title> Home | URL Shortening App</title>
  <h1>Shorten your Links</h1>
  <div row>
    <%= form_tag({controller: 'urls', action: 'new'}, method: 'post', remote: true) do %>
      <% if current_user %>
        <div class="col-sm-6">
          <input name="target" id="target" type="text" class="form-control" placeholder="Please enter the url" required>
        </div>
        <div class="col-sm-6">
          <input name="slug" id="slug" type="text" class="form-control" placeholder="Slug string" >
        </div>
      <% else %>
        <div class="col-sm-12">
          <input name="target" id="target" type="text" class="form-control" placeholder="Please enter the url" required>
        </div>
      <% end %>
      <br><br><br>
      <div class="row col-sm-2 col-sm-offset-5">
        <%= submit_tag "Chomp", :id => "bounce", :class => "btn btn-primary"%>
      </div>
    <% end %>
  </div>
  <br><br><br><br>
  <div class="text-center chompped_url link">
    <a href="" class="extlink" id="extlink" target="blank"></a>
  </div>

  <div class="statistics">
    <% if Url.present? %>
      <div class="row col-sm-12 fsi-row-lg-level fsi-row-md-level">
          <%= render "pages/popular_urls" %>
          <%= render "pages/recent_urls" %>
          <%= render "pages/influential_users" %>
    <% end %>
  </div>
</div>